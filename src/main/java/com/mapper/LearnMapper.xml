<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >
<mapper namespace="com.dao.LearnDao">
	<!-- 查询所有浏览课程信息 -->
	<select id="queryAll" parameterType="java.lang.Integer" resultType="com.entity.Learn">
		select * from learn where l_id = #{param1}
	</select>
	
	<!-- 添加浏览课程信息 -->
	<insert id="add" parameterType="com.entity.Learn">
		insert into learn(u_id,c_id,v_id,state,l_date)values(#{u_id},#{c_id},#{v_id},#{state},#{l_date})
	</insert>
</mapper>
